<%- model_class = DeploymentConfiguration -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:tag_prefix) %></th>
      <th><%= model_class.human_attribute_name(:deployment_profile_id) %></th>
      <th><%= model_class.human_attribute_name(:git_repo_name) %></th>
      <th><%= model_class.human_attribute_name(:git_org) %></th>
      <th><%= model_class.human_attribute_name(:rightscale_array_id) %></th>
      <th><%= model_class.human_attribute_name(:rightscale_account_id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @deployment_configurations.each do |deployment_configuration| %>
      <tr>
        <td><%= link_to deployment_configuration.id, deployment_configuration_path(deployment_configuration) %></td>
        <td><%= deployment_configuration.tag_prefix %></td>
        <td><%= deployment_configuration.deployment_profile_id %></td>
        <td><%= deployment_configuration.git_repo_name %></td>
        <td><%= deployment_configuration.git_org %></td>
        <td><%= deployment_configuration.rightscale_array_id %></td>
        <td><%= deployment_configuration.rightscale_account_id %></td>
        <td><%=l deployment_configuration.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_deployment_configuration_path(deployment_configuration), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      deployment_configuration_path(deployment_configuration),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_deployment_configuration_path,
            :class => 'btn btn-primary' %>
