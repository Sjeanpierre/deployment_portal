<h1>Listing deployment_configurations</h1>

<table>
  <tr>
    <th>Deploy</th>
    <th>Tag prefix</th>
    <th>Deployment profile</th>
    <th>Git repo name</th>
    <th>Git org</th>
    <th>Rightscale array</th>
    <th>Rightscale account</th>
    <th>Created at</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @deployment_configurations.each do |deployment_configuration| %>
  <tr>
    <td><%= link_to image_tag("/deploy.png"), new_deployment_path(deployment_configuration.deployment_profile_id) %></td>
    <td><%= deployment_configuration.tag_prefix %></td>
    <td><%= deployment_configuration.deployment_profile_id %></td>
    <td><%= deployment_configuration.git_repo_name %></td>
    <td><%= deployment_configuration.git_org %></td>
    <td><%= deployment_configuration.rightscale_array_id %></td>
    <td><%= deployment_configuration.rightscale_account_id %></td>
    <td><%= deployment_configuration.created_at %></td>
    <td><%= link_to 'Show', deployment_configuration %></td>
    <td><%= link_to 'Edit', edit_deployment_configuration_path(deployment_configuration) %></td>
    <td><%= link_to 'Destroy', deployment_configuration, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

