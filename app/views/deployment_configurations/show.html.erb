<%- model_class = DeploymentConfiguration -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:tag_prefix) %>:</strong></dt>
  <dd><%= @deployment_configuration.tag_prefix %></dd>
  <dt><strong><%= model_class.human_attribute_name(:deployment_profile_id) %>:</strong></dt>
  <dd><%= @deployment_configuration.deployment_profile_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:git_repo_name) %>:</strong></dt>
  <dd><%= @deployment_configuration.git_repo_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:git_org) %>:</strong></dt>
  <dd><%= @deployment_configuration.git_org %></dd>
  <dt><strong><%= model_class.human_attribute_name(:rightscale_array_id) %>:</strong></dt>
  <dd><%= @deployment_configuration.rightscale_array_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:rightscale_account_id) %>:</strong></dt>
  <dd><%= @deployment_configuration.rightscale_account_id %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              deployment_configurations_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_deployment_configuration_path(@deployment_configuration), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              deployment_configuration_path(@deployment_configuration),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
